@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $("#DivprbObserved").hide();
        $("#ProblemInfo").hide();
        function AjaxWithValue(method, ddl, e) {
            var val    =  e.value;
            var refval =  e.cvalue;
            if (ddl == "StateId")
                $("#CityId").empty();
            if (ddl == 'DeviceModalId') {
                var brand = $("#DeviceBrandId").val();
                var category = $("#DeviceSubCategoryId").val();
                if (brand == "" || category == "")
                    return false;
                else
                    val = brand + ',' + category;
            }
            $.ajax({
                type: "GET",
                url: "/DropdownBind/" + method + "?value=" + val,
                data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {                    
                    $("#" + ddl).empty();
                    for (var i = 0; i < data.length; i++) {
                        var opt = new Option(data[i].Text, data[i].Value);
                        $('#' + ddl).append(opt);
                    }
                    if (refval !=undefined) {
                        $('#' + ddl).val(refval);
                    }
                }
            });
        }

        function AjaxWithFilter(method, ddl, e) {
            var CategoryId = e.value;
            var ClientId   =  $("#ClientId").val();
              $.ajax({
                  type: "GET",
                  url: "/DropdownBind/" + method,
                  data:  { CategoryId:  CategoryId,ClientId: ClientId},
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {                    
                    $("#" + ddl).empty();
                    for (var i = 0; i < data.length; i++) {
                        var opt = new Option(data[i].Text, data[i].Value);
                        $('#' + ddl).append(opt);
                    }
                   
                }
            });
        }
        function AjaxWithFilter1(method, ddl, e) {
            var ClientId = e.value;
            var companyId   =  $("#CompanyId").val();
              $.ajax({
                  type: "GET",
                  url: "/DropdownBind/" + method,
                  data:  { compId:  companyId,ClientId: ClientId},
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {                    
                    $("#" + ddl).empty();
                    for (var i = 0; i < data.length; i++) {
                        var opt = new Option(data[i].Text, data[i].Value);
                        $('#' + ddl).append(opt);
                    }
                  
                }
            });
        }
      
        $('#serviceType').change(function () {            
            if ($(this).val() == 7) {
                $("#Repair1").hide();
                $("#tabIndex").val('T');
                $("#Installtion1").show();
            }
            else
            {
                  $("#Installtion1").hide();
                $("#Repair1").show();
                    $("#tabIndex").val('B');
            }
        })


           $('input[type=radio][name="ServiceTypeId"]').change(function () {
                //console.log($(this).val());

          
                if ($(this).val() == 7) {

               
                    $("#ProblemInfo").hide();
                }
                else {
                    $("#ProblemInfo").show();
                      
                    if ($("#prvCallId").text().length != 0)
                        $("#IsRepeat").text("Yes");
                    else
                        $("#IsRepeat").text("No");
                }

        });
           $('a[data-toggle="tab"]').click(function (e) {
            if (this.hash == '#tab-3')
                $("#tabIndex").val('C');
            else if (this.hash == '#tab-2')
                    $("#tabIndex").val('O');
            else if (this.hash == '#tab-5')
                 $("#tabIndex").val('F');
            else
                 $("#tabIndex").val('D');

        });
          
          function GetHistory(DeviceId) {

            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetCallHistory","ClientData")',
                contentType: 'application/json; charset=utf-8',
                cache: false,
                data: {"DeviceId": DeviceId},
                success: function (response) {

                    $("#Info").html(response);
                },
                error: function (e) {
                    console.log(e);
                    $(".submitbutton").attr("disabled", false);
                    alert("Something went wrong...");

                },
                complete: function () {

                    $(".submitbutton").attr("disabled", false);
                }
            });
        }
    </script>
}
