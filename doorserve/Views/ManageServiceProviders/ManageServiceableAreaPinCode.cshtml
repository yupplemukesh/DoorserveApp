@model doorserve.Models.ManageServiceModel
@using doorserve.Models
@{
    ViewBag.Title = "Manage Serviceable Area PinCode";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <h3 class="m-y-0">Manage Serviceable Area Pin Code </h3>
            </div>
        </div>

    </div>

</div>
<div class="panel-body">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 ">
            @using (Html.BeginForm("ManageServiceableAreaPinCode", "ManageServiceProviders", FormMethod.Post, new { enctype = "multipart/form-data", id = "ServiceForm" }))
            {
                @Html.Partial("~/views/common/_AddOrEditOffered.cshtml", Model.Service)
                <div class="row form-group pull-right">
                    <button type="button" class="btn btn-primary reset">RESET</button>
                    <button class="btn btn-primary">
                        SAVE
                    </button>
                </div>
            }
        </div>

    </div>
</div>


<div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <h3 class="m-y-0">Bulk Upload</h3>
            </div>
        </div>

    </div>

</div>

<div class="panel-body">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 ">
            @using (Html.BeginForm("ImportServiceableAreaPinCodes", "ManageServiceProviders", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                Model.ImportModel.RefKey = Model.Service.ServiceId;
                @Html.Partial("~/Views/Common/_ImportForm.cshtml", Model.ImportModel)
            }

          
        </div>
    </div>
</div>

<div class="panel-body">

    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 p-b-10">

            @using (Html.BeginForm("AreaPincodeTemplate", "ManageServiceProviders", FormMethod.Get, new { @class = "dis-inline" }))
            {
                <div class="row col-md-offset-11 text-right ">
                    <button type="submit" class="btn btn-primary"> Template</button>
                </div>
            }
            </div>

        </div>
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 ">
         
            @Html.Partial("~/Views/Common/_UploadedFileList.cshtml", Model.Files, new ViewDataDictionary { {"BaseUrl",Model.BaseUrl } })


        </div>
    </div>
</div>

<div class="panel-body">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 ">
            @Html.Partial("~/Views/Common/_ServiceableAreaPinTable.cshtml", Model.Services)
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
<script>
     $("#ServiceAreaId").val(null);
    $("#PinCode").val(null);
 
     
        function AjaxWithValue(method, ddl, e) {         
         var val = e.value;
         var other=e.Other;   
         if (ddl == "PinCode")
             val = val + ','+$("#StateId").val() ;
        $.ajax({
            type: "GET",
            url: "/DropdownBind/" + method + "?value=" + val,
            data: '{}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                console.log(data);
                $("#" + ddl).empty();
                for (var i = 0; i < data.length; i++)
                {
                    var opt = new Option(data[i].Text, data[i].Value);
                    $('#' + ddl).append(opt);
                }
                if (other != undefined) {
                    $('#' + ddl).val(other);

                }

            }
        });
    }
        function EditAreaPin(Service) {
        $.ajax({
            type: "GET",
            url: '@Url.Action("GetServiceAreaPinCode","ManageServiceCenters")',
            data: { "ServiceAreaId": Service },
                   async: true,
            contentType: "application/json",
            success: function (data) {
                console.log(data);
                  $("#ServiceAreaId").val(data.ServiceAreaId);
                  $("#ServiceId").val(data.ServiceId);
                $("#Country").val(data.Country);   
                $("#State").val(data.State);
                $("#District").val(data.District);  
                $("#PinCode").val(data.PinCode);  
                 var obj = { value:data.PinCode , Other: data.LocationId};
                        AjaxWithValue('BindLocationByPinCodeJson', 'LocationId', obj);            
                $("#IsActive").prop("checked", data.IsActive);
                
                }

            
        });

    }
    </script>
}
