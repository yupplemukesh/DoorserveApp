@model IEnumerable<doorserve.Models.DeviceCategoryModel>
@using doorserve.Models
@{
    Layout = null;
    int count = 0;
}

<div class="panel panel-default panel-table">
    <div class="panel-heading">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-6">
                    <h3 class="m-y-0">List Of All Category</h3>
                </div>
                <div class="col-md-6 ">
                    <div class="pull-right">
                        @*@if (Model._UserActionRights.ExcelExport)
        {
            <button class="btn btn-primary excel">Export to Excel</button>
        }*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-condensed" id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SerialNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CatName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SortOrder)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsRepair)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments)
                </th>
                <th>@Html.DisplayNameFor(model=>model.CBy)</th>
                <th>@Html.DisplayNameFor(model=>model.CreatedDate)</th>
                <th>@Html.DisplayNameFor(model=>model.MBy)</th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifyDate)
                </th>


                <th>Action</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(count += 1)
                    @*@Html.DisplayFor(modelItem => item.SerialNo)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CatName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SortOrder)
                </td>
                <td>
                    @(item.IsRepair == true ? "Yes" : "No")

                </td>
                <td>
                    @(item.IsActive == true ? "Active" : "InActive")

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
                <td>@Html.DisplayFor(modelItem=>item.CBy)</td>
                <td>@Html.DisplayFor(modelitem=>item.CreatedDate)</td>
                <td>@Html.DisplayFor(modelitem=>item.MBy)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifyDate)
                </td>

                <td style="display: inline-flex">
                    @if (Permissions.Rights.Edit)
                    {
                        <a href="#Editmodel" data-toggle="modal" class="btn btn-small btn-info btnSize " onclick="EditCategory(@item.CatId)">Edit</a>
                    }
                </td>
                </tr>
           
        }

        </table>
        </div>


