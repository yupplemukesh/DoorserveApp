@model IEnumerable<doorserve.Models.ServiceModel>
@using doorserve.Models
@{ 

        var count = 1;
}
<div class="panel-body">
    <div class="x_content" style="overflow-x: scroll;">
        <table class="table table-striped table-bordered table-condensed" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Serial No")
                    </th>
                    <th>
                        @Html.DisplayName("Category")
                    </th>
                    <th>
                        @Html.DisplayName("Sub-Category")
                    </th>
                    <th>
                        @Html.DisplayName("Service Type")
                    </th>
                    <th>
                        @Html.DisplayName("Delivery Service Type")
                    </th>
                    <th>
                        @Html.DisplayName("Service Charges")
                    </th>
                    <th>
                        @Html.DisplayName("Remarks")
                    </th>
                    <th>
                        @Html.DisplayName("IsActive")
                    </th>
                    <th>Action</th>
                </tr>
            </thead>


            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubCategory)
                    </td>
                    <td>
                        @item.ServiceType
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceCharges)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remarks)
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span>Yes</span>
                        }
                        else
                        {
                            <span>No</span>

                        }
                    </td>
                  
                    <td style="display: inline-flex">
                        @if (Permissions.Rights.Edit)
                        {
                            <a href="#" onclick="EditService('@item.ServiceId')"  class="btn btn-small btn-info btnSize">Edit</a>
                        }

                    </td>
                </tr>
                count++;
            }

        </table>
    </div>
</div>