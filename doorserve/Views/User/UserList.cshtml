@model  IEnumerable<doorserve.Models.User>
@using doorserve.Models


@{
    var count = 1;
    ViewBag.Title = "User List";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <h3 class="m-y-0">List Of User</h3>
            </div>
            <div class="col-md-3 ">
                <div class="pull-right">
                    @if (Permissions.Rights.Create)
                    {
                        <a href="@Url.Action("AddUser", "User")" class="btn btn-primary">Add User</a>
                    }
                </div>
            </div>
            <div class="col-md-3 ">
                <div class="pull-left">
                    @if (Permissions.Rights.ExcelExport)
                    {
                        <button class="btn btn-primary" onclick="tableExport('user')" >Export to Excel</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel-body">
    <div class="x_content" style="overflow-x: scroll;">
        <table class="table table-striped table-bordered table-condensed" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Serial No")
                    </th>
                    <th>
                        @Html.DisplayName("Company Name")
                    </th>
                    <th>
                        @Html.DisplayName("Name")
                    </th>
                    <th>
                        @Html.DisplayName("User Name")
                    </th>
                    <th>
                        @Html.DisplayName("User Of")
                    </th>
                    <th>
                        @Html.DisplayName("Role Name")
                    </th>
                    <th>
                        @Html.DisplayName("Email")
                    </th>
                    <th>
                        @Html.DisplayName("Mobile No")
                    </th>
                    <th>
                        @Html.DisplayName("State")
                    </th>
                    <th>
                        @Html.DisplayName("District")
                    </th>
                    <th>
                        @Html.DisplayName("City")
                    </th>
                    <th>
                        @Html.DisplayName("Pin Code")
                    </th>

                    <th>
                        @Html.DisplayName("Is Active")
                    </th>
                    <th>
                        @Html.DisplayName("Created By")
                    </th>

                    <th>
                        @Html.DisplayName("Created Date")
                    </th>
                    <th>
                        @Html.DisplayName("Modify By")
                    </th>

                    <th>
                        @Html.DisplayName("Modify Date")
                    </th>
                    <th>Action</th>
                </tr>
            </thead>


            @foreach (var item in Model)
            {
        <tr>
            <td>
                @count
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RefName)
            </td>
            <td>
                @item.RoleName

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConEmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConMobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PinNumber)
            </td>

            <td>

                @(item.IsActive == true ? "Yes" : "No")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedOn)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.ModifiedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedOn)
            </td>
            <td style="display: inline-flex">
                @if (Permissions.Rights.Edit)
                {
                    <a href="@Url.Action("EditUser","User",new { id=item.UserId})" class="btn btn-small btn-info btnSize">Edit</a>
                }

                @*<input type="button" class="btn btn-small btn-warning btnSize" value="Add Rights" onclick="@("window.location.href='" + @Url.Action("AddRights", "Master",new {ID=item.ID }) + "'");" />*@
                @*<a href="#Editmodel" data-toggle="modal" class="btn btn-small btn-info btnSize " onclick="EditUser(@item.ID)">Edit</a>*@
                @*<a href="#Historymodel" data-toggle="modal" class="btn btn-small btn-success btnSize" onclick="EditPassword( @item.ID , '@item.Password')">Update UserPassword</a>*@
                @*<input type="button" class="btn btn-small btn-success btnSize" value="Update Password" onclick="@("window.location.href='" + @Url.Action("EditPassword", "Master",new {Id=item.ID,Email=item.Email_Address,username=item.UserName}) + "'");" />*@
            </td>
        </tr>
                count++;
            }

        </table>
    </div>
</div>
