@using doorserve.Models
@{
    ViewBag.Title = "Gst";
}

<div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <h3 class="m-y-0">Add Gst Category</h3>
            </div>
            <div class="col-md-6 ">
                <div class="pull-right">

                    @if (Permissions.Rights.ExcelExport)
                    {
                        <button class="btn btn-primary excel">
                            Export Excel
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel-body">
    @if (Permissions.Rights.Create)
    {
        @Html.Action("AddGst", "GstCategory")
    }

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        @*<h2>List Of GST Category</h2>*@
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content" style="overflow-x: scroll;">
                        @if (Permissions.Rights.View)
                        {
                            @Html.Action("GstTable", "GstCategory")
                        }
                        </div>
                </div>
            </div>
        </div>
    </div>
<div class="modal fade" id="Editmodel" tabindex="-1" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header  bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Gst Category </h4>
            </div>

            <div class="modal-body" id="Info"></div>
        </div>

    </div>
</div>


@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function EditGstCategory(gstCategoryId) {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("EditGst", "GstCategory")',
                data: { GstCategoryId: gstCategoryId},
                @*url: "/GstCategory/EditGst?gstCategoryId=" + gstCategoryId,*@
                contentType: 'application/json; charset=utf-8',
                cache: false,
                success: function (response) {
                    $("#Info").html(response);
                },
                error: function (e) {
                    console.log(e);
                    $(".submitbutton").attr("disabled", false);
                    alert("Something went wrong...");

                },
                complete: function () {

                    $(".submitbutton").attr("disabled", false);
                }
            });
        }

    </script>
}