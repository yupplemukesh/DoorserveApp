@model IEnumerable<doorserve.Models.SMSGatewayModel>
@using doorserve.Models
@{var count = 1;
 
}



<div class="table-responsive">
    <table class="table table-striped table-bordered dataTable" id="table-1">
        <thead>
            <tr>
                <th>SL No</th>
                <th>Company Name</th>
                <th>Gateway Name</th>
                <th>IsActive</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>
                <td>@count</td>
                <td>@item.CompanyName</td>
                <td>@item.GatewayName</td>
                <td>@item.IsActive</td>
                <td class="text-center">
                    @if (Permissions.Rights.Edit)
                    {
                        <button type="button" class="btn btn-success btn-circle btn-sm" onclick="GetGatwayDetails(@item.GatewayId)"><i class="glyphicon glyphicon-pencil"></i></button>
                    }
                </td>

            </tr>
                count++;
            }





        </tbody>

    </table>
</div>




