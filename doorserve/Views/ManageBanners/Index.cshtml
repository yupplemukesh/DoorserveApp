@model IEnumerable<doorserve.Models.ManageBannersModel>
@using doorserve.Models
@{
    ViewBag.Title = "Banner";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    int RowNo = 1;
}


<div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <h3 class="m-y-0">Manage Website Banners</h3>
            </div>
            <div class="col-md-6 ">
                <div class="pull-right">
                    @* @if (Permissions.Rights.ExcelExport)
                        {
                            <button class="btn btn-primary excel">
                                Export Excel
                            </button>
                        }*@


                    <a class="btn btn-primary" href="@Url.Action("Create", "ManageBanners")">

                        <span>
                            Add Banner

                        </span>
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel-body">
    <div class="row">
        <div class="col-md-12">
            <div class="x_content" style="overflow-x: scroll;">
                @if (Permissions.Rights.View)
                {
                    <table class="table table-striped table-bordered table-condensed" id="myTable">
                        <thead>
                            <tr>
                                <th>Serial No</th>
                                <th>
                                    @Html.DisplayName("Banner Title")
                                </th>
                                <th>
                                    @Html.DisplayName("Banner Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Page Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Section Name")
                                </th>
                                <th>
                                    @Html.DisplayName("IsActive")
                                </th>
                                <th>
                                    @Html.DisplayName("AddedBy")
                                </th>
                                <th>
                                    @Html.DisplayName("AddedOn")
                                </th>
                                <th>
                                    @Html.DisplayName("ModifiedBy")
                                </th>
                                <th>
                                    @Html.DisplayName("ModifiedOn")
                                </th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@RowNo</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PageName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SectionName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AddedBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AddedOn)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifiedBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifiedOn)
                                </td>

                                <td style="display: inline-flex;">

                                   @if (Permissions.Rights.Edit)
             {
                                       @* //<input type="button" class="btn btn-success btn-circle btn-sm" onclick="EditBanner('@item.BannerId')" value="Edit" />*@

                                    @Html.ActionLink("Edit", "Edit", "ManageBanners", new { Id = @item.BannerId }, null)

                                   }
                                </td>
                            </tr>
                            RowNo++;
                        }

                    </table>
                }
            </div>
        </div>      
    </div>
</div>

@if (ViewBag.Message != null)
{
    <div id="snackbar">@ViewBag.Message</div>
}
@if (ViewBag.Message != null)
{
    <script>

        var x = document.getElementById("snackbar");
        x.className = "show";
        setTimeout(function () { x.className = x.className.replace("show", ""); }, 4000);

    </script>
}

@section Scripts{

}
