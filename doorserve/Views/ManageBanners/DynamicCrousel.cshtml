@model doorserve.Models.DynamicCrouselModel
@{
    Layout = null;
}
<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home" style="color:gray;font-size:15px;">Webview Banners</a></li>
    <li><a data-toggle="tab" href="#menu1" style="color:gray;font-size:15px;" >Mobileview Banners</a></li>
    
</ul>

<div class="tab-content">
    <div id="home" class="tab-pane fade in active">
        @using (Html.BeginForm("DynamicCrousel", "ManageBanners", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.FirstImg)
            @Html.HiddenFor(m => m.SecondImg)
            @Html.HiddenFor(m => m.ThirdImg)
            <div class="form-horizontal" style="padding-top: 30px;">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Image1, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">

                        @Html.TextBoxFor(model => model.Image1, htmlAttributes: new { @type = "file", accept = "image/*", @class = "form-control", @onchange = "readURL(this);" })
                        @Html.ValidationMessageFor(model => model.Image1, "", new { @class = "text-danger" })

                    </div>
                    <div class="col-md-5">
                        <img id="blah" src="http://crm.doorserve.com/Repairs_Crousel_Images/Webview1.jpg" alt="Image" width="100" height="100" />

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Image2, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">

                        @Html.TextBoxFor(model => model.Image2, htmlAttributes: new { @type = "file", accept = "image/*", @class = "form-control", @onchange = "readURL1(this);" })
                        @Html.ValidationMessageFor(model => model.Image2, "", new { @class = "text-danger" })

                    </div>
                    <div class="col-md-5">
                        <img id="blah2" src="http://crm.doorserve.com/Repairs_Crousel_Images/Webview2.jpg" alt="Image" width="100" height="100" />

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Image3, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-5">
                        @Html.TextBoxFor(model => model.Image3, htmlAttributes: new { @type = "file", accept = "image/*", @class = "form-control", @onchange = "readURL2(this);" })

                        @Html.ValidationMessageFor(model => model.Image3, "", new { @class = "text-danger" })

                    </div>
                    <div class="col-md-5">
                        <img id="blah3" src="http://crm.doorserve.com/Repairs_Crousel_Images/Webview3.jpg" alt="Image" width="100" height="100" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
