@model IEnumerable<doorserve.Models.Company.CompanyModel>
@using doorserve.Models
@using GridMvc.Html
@{
    ViewBag.Title = "Manage Company";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    //var i = 0;
    int Count = 1;
}
@section Styles{

}
<div class="panel panel-default panel-table">
    <div class="panel-heading">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-6">
                    <h3 class="m-y-0">Manage Company</h3>
                </div>
                <div class="col-md-6 ">
                    <div class="pull-right">
                        @if (Permissions.Rights.ExcelExport)
                        {
                            <button class="btn btn-primary excel">
                                Export Excel
                            </button>
                        }

                        @if (Permissions.Rights.Create)
                        {
                            <a class="btn btn-primary" href="@Url.Action("Create", "ManageCompany")">

                                <span>
                                    Add Company

                                </span>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-condensed" id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("#SN")
                </th>
                <th>
                    @Html.DisplayName("Company Name")
                </th>
                <th>
                    @Html.DisplayName("Company Code")
                </th>
                <th>
                    @Html.DisplayName("Android AppName")
                </th>
                <th>
                    @Html.DisplayName("IOS AppName")
                </th>
                <th>
                    @Html.DisplayName("Domain Name")
                </th>
                <th>@Html.DisplayName("Domain Expiry Date")</th>
                <th>@Html.DisplayName("IsActive")</th>               
                <th>Action</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CompanyCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AndroidAppName)

            </td>
            <td>@Html.DisplayFor(modelItem => item.IOSAppName)</td>
            <td>@Html.DisplayFor(modelItem => item.CompanyWebsiteDomainName)</td>
            <td>
                @Html.DisplayFor(modelItem => item.DomainExpiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td style="display: inline-flex">
                @if (Permissions.Rights.Edit)
                {
                    <a class="btn btn-small btn-info btnSize " href='@Url.Action("Edit", "ManageCompany", new { @compId = item.CompanyId })'>Edit</a>
                }
            </td>
        </tr>
            Count++;
        }
    </table>
</div>    
    @section scripts{

    }
