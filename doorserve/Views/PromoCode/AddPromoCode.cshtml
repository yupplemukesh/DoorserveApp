@model doorserve.Models.PromoCodeModel
    @{ 
        Layout = null;
    }
@using (Html.BeginForm("AddPromoCode", "PromoCode"))
{
    <div class="col-md-12 col-sm-12 col-lg-12">
        <div class="col-md-6">

            <div class="row" style="padding-bottom: 5px;">
                @Html.LabelFor(model => model.PromoCode, htmlAttributes: new { @class = "col-md-4 col-xs-12" })
                <div class="col-md-7 col-sm-7 col-xs-12">
                    @Html.TextBoxFor(model => model.PromoCode, htmlAttributes: new { @class = "form-control", placeholder = "" })
                    @Html.ValidationMessageFor(model => model.PromoCode, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row" style="padding-bottom: 5px;">
                @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "col-md-4 col-xs-12" })
                <div class="col-md-7 col-sm-7 col-xs-12">
                    @Html.TextBoxFor(model => model.Amount, htmlAttributes: new { @class = "form-control", placeholder = "" })
                    @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row" style="padding-bottom: 5px;">
                @Html.LabelFor(model => model.FromDate, htmlAttributes: new { @class = "col-md-4 col-xs-12" })
                <div class="col-md-7 col-sm-7 col-xs-12">
                    @Html.TextBoxFor(model => model.FromDate, htmlAttributes: new { @class = "form-control", @type="date",@min= DateTime.Now.ToString("yyyy-MM-dd") ,  @datainputmask = "'alias': 'dd-mm-yyyy'", placeholder = "" })
                    @Html.ValidationMessageFor(model => model.FromDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row" style="padding-bottom: 5px;">
                @Html.LabelFor(model => model.ToDate, htmlAttributes: new { @class = "col-md-4 col-xs-12" })
                <div class="col-md-7 col-sm-7 col-xs-12">
                    @Html.TextBoxFor(model => model.ToDate, htmlAttributes: new { @class = "form-control date-picker", placeholder = "", @type = "date", @min = DateTime.Now.ToString("yyyy-MM-dd"), @datainputmask = "'alias': 'dd-mm-yyyy'" })
                    @Html.ValidationMessageFor(model => model.ToDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
   
    <div class="col-md-12">
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-4">
                @*<button class="btn btn-primary" type="button">Cancel</button>*@
                <button class="btn btn-primary" type="reset">Reset</button>
                <button type="submit" class="btn btn-success" id="btnNotify">Submit</button>
            </div>
        </div>
    </div>
}
