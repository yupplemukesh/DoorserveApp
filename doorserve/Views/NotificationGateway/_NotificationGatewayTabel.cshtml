@model IList<doorserve.Models.Gateway.NotificationGatewayModel>
@using doorserve.Models
@{var count = 1;
    var rights = ViewData["rights"] as doorserve.Models.UserActionRights;
}


<div class="table-responsive">
    <table class="table table-striped table-bordered dataTable" id="table-1">
        <thead>
            <tr>
                <th>SL No</th>
                <th>GatewayName</th>
                <th>IsActive</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@item.GatewayName</td>
                    <td>@item.IsActive</td>
                    <td class="text-center">
                        @if (Permissions.Rights.Edit)
                        {
                            <button type="button" class="btn btn-success btn-circle btn-sm" onclick="GetGatwayDetails(@item.GatewayId)"><i class="glyphicon glyphicon-pencil"></i></button>
                        }

                    </td>

                </tr>
                count++;
            }

        </tbody>
    </table>
</div>