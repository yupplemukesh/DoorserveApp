                success: function (data) {
                    $("#" + ddl).empty();
                    for (var i = 0; i < data.length; i++) {
                        var opt = new Option(data[i].Text, data[i].Value);
                        $('#' + ddl).append(opt);
                    }
                    //if (refval != null || refval != undefined) {
                    //    $('#' + ddl).val(refval);
                    //}
                }
            });
        }

        $(document).on("click", "#btnSave", function (e) {
           
            var valid = true;
            if ($("#DeviceCategoryId").find(":selected").text().toLowerCase() == "mobile")
            {
                if (!$("#DeviceIMEIOne").val()) {
                    $("#lblIMEIErrorMsg").text("Enter the device IMEI One");
                    valid = false;
                }                
                if (valid)
                {
