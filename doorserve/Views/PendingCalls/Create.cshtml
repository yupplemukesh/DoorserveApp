@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $('input[type=radio][name="ServiceTypeId"]').change(function () {
                //console.log($(this).val());

                if ($(this).val() == 7) {

                    $("#ProblemInfo").hide();
                }
                else {
                    $("#ProblemInfo").show();
                    if ($("#prvCallId").text().length != 0)
                        $("#IsRepeat").text("Yes");
                    else
                        $("#IsRepeat").text("No");
                }

        });
        $("#DivprbObserved").hide();
        $("#ProblemInfo").hide();
        function AjaxWithValue(method, ddl, e) {
        var val = e.value;
        var refval = e.cvalue;
        if (ddl == "StateId")
            $("#CityId").empty();
            $("#LocationId").empty();
        if (ddl == 'DeviceModalId') {

            var brand = $("#DeviceBrandId").val();
            var category = $("#DeviceSubCategoryId").val();
            if (brand == "" || category == "")
                return false;
            else
                val = brand + ',' + category;
        }

        $.ajax({
            type: "GET",
            url: "/DropdownBind/" + method + "?value=" + val,
            data: '{}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                
                $("#" + ddl).empty();

                for (var i = 0; i < data.length; i++) {
                    var opt = new Option(data[i].Text, data[i].Value);
                    $('#' + ddl).append(opt);
                }
                if (refval != null || refval != undefined) {
                    $('#' + ddl).val(refval);
                }


            }
        });
    }

      

     
        function AjaxWithFilter(method, ddl, e) {
            
            var CategoryId = e.value;
            var ClientId = $("#ClientId").val();
            var categoryName = $(e).find(":selected").text();
            if (categoryName.toLowerCase() == "mobile") {
                $("#dvDeviceImeiOne").css("display", "block");
                $("#dvDeviceImeiTwo").css("display", "block");
            }
            else {
                $("#dvDeviceImeiOne").css("display", "none");
                $("#dvDeviceImeiTwo").css("display", "none");
            }

            $.ajax({
                type: "GET",
                url: "/DropdownBind/" + method,
                data: { CategoryId: CategoryId, ClientId: ClientId },
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $("#" + ddl).empty();
                    for (var i = 0; i < data.length; i++)
                    {
                        var opt = new Option(data[i].Text, data[i].Value);
                        $('#' + ddl).append(opt);
                    }
                    //if (refval != null || refval != undefined) {
                    //    $('#' + ddl).val(refval);
                    //}
                }
            });
        }
        function AjaxWithFilter1(method, ddl, e) {
            var ClientId = e.value;

            var companyId = $("#CompanyId").val();
            $.ajax({
                type: "GET",
