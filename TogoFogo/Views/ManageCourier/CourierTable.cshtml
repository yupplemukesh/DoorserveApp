@model IEnumerable<TogoFogo.Models.ManageCourierModel>
@{
    Layout = null;
}


<table class="table table-striped table-bordered table-condensed" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Serial No")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UploadedCourierFile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourierCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourierBrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AWBNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsReverse)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAllowPreference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StateId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourierTAT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourierCompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LegalDocumentVerificationStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgreementSignupStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LuluandSky_Status)
            </th>
            <th>
                @Html.DisplayName("Days Remaining to Agreement Expiry")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgreementEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayName("Modify By")
            </th>
            <th>
                @Html.DisplayName("Modify Date")
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SerialNo)
        </td>
        <td>
            @if (item.UploadedCourierFile != null)
            {
                <img src="~/Uploaded Images/@item.UploadedCourierFile" width="50" height="50" />
            }
            else
            {
                @Html.DisplayFor(modelItem => item.UploadedCourierFile)
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourierName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourierCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourierBrandName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Priority)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AWBNumber)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.IsReverse)*@
            @(item.IsReverse == true ? "Yes" : "No")
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.IsAllowPreference)*@
            @(item.IsAllowPreference == true ? "Yes" : "No")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cnty_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.St_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourierTAT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourierCompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LegalDocumentVerificationStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AgreementSignupStatus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LuluandSky_Status)
        </td>
        <td>@Html.DisplayFor(modelItem => item.DaysRemaining)</td>
        <td>
            @Html.DisplayFor(modelItem => item.AgreementEndDate)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.IsActive)*@
            @(item.IsActive == true ? "Active" : "InActive")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comments)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifyBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifyDate)
        </td>
        <td style="display: inline-flex">

            <a href="#Editmodel" data-toggle="modal" class="btn btn-small btn-info btnSize " onclick="EditCourier(@item.CourierId)">Edit</a>
            @*<a href="#Historymodel" data-toggle="modal" class="btn btn-small btn-success btnSize ">History</a>*@
            <input type="button" value="Delete" class="btn btn-small btn-danger btnSize" />
        </td>
    </tr>
    }

</table>
