@model IEnumerable<TogoFogo.Models.ManageSparePart>
@using TogoFogo.Models
@{
    Layout = null;
    int Count = 1;
}

<div class="panel panel-default panel-table">
    <div class="panel-heading">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-6">
                    <h3 class="m-y-0">List Of All Spare</h3>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-condensed" id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Serial No")
                </th>
                <th>
                    @Html.DisplayName("Category")
                </th>
                <th>
                    @Html.DisplayName("Sub Category")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th>
                    @Html.DisplayName("Product Name")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TUPC)
                </th>
                <th>
                    @Html.DisplayName("Spare Type Name")
                </th>
                <th>
                    @Html.DisplayName("CTH Number")
                </th>
                <th>
                    @Html.DisplayName("Part Image")
                </th>
                <th>
                    @Html.DisplayName("Sort Order")
                </th>
                <th>
                    @Html.DisplayName("Is Active")
                </th>
                <th>
                    @Html.DisplayName("Created By")
                </th>
                <th>
                    @Html.DisplayName("Created Date")
                </th>
                <th>
                    @Html.DisplayName("Modify By")
                </th>

                <th>
                    @Html.DisplayName("Modify Date")
                </th>
                <th>Action</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CatName)
                </td>
                <td>

                    @Html.DisplayFor(modelItem => item.SubCatName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TUPC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpareTypeName)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.CTHNo)
                </td>

                <td>
                    @if (item.Part_Image != null)
                    {
                        <img src="~/UploadedImages/@item.Part_Image" width="50" height="50" />
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Part_Image)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SortOrder)
                </td>
                <td>

                    @(item.IsActive == true ? "Active" : "InActive")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifyDate)
                </td>

                <td style="display: inline-flex">
                    @* @Url.Action("#Editmodel", new { id = item.BrandId })*@
                    @*<a href="#Historymodel" data-toggle="modal" class="btn btn-small btn-success btnSize ">History</a>*@
                    @if (Permissions.Rights.Edit)
                    {
                        <a href="#Editmodel" data-toggle="modal" class="btn btn-small btn-info btnSize " onclick="EditSpareName('@item.SpareTypeId')">Edit</a>
                    }
                    @* @if (Model._UserActionRights.Delete)
                        {
                            <input type="button" value="Delete" class="btn btn-small btn-danger btnSize" />
                        }*@
                </td>
            </tr>
            Count++;
        }

    </table>

</div>

