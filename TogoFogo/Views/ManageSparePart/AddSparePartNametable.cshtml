
@model IEnumerable<TogoFogo.Models.ManageSparePart>
@{
    Layout = null;
}


<table class="table table-striped table-bordered table-condensed" id="myTable">
    <thead>
        <tr>

            <th>
                @Html.DisplayName("Category")
            </th>
            <th>
                @Html.DisplayName("Sub Category")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayName("Product Name")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TUPC)
            </th>
            <th>
                @Html.DisplayName("Spare Type Name")
            </th>
          
            <th>
                @Html.DisplayName("Spare Code")
            </th>
            <th>
                @Html.DisplayName("CTH Number")
            </th>
            <th>
                @Html.DisplayName("Part Image")
            </th>
            <th>
                @Html.DisplayName("Sort Order")
            </th>
            <th>
                @Html.DisplayName("Is Active")
            </th>

            <th>Actions</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.CatName)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.SubCatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TUPC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpareTypeName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.SpareCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CTH_No)
            </td>

            <td>
                @if (item.Part_Image != null)
                {
                    <img src="~/Uploaded Images/@item.Part_Image" width="50" height="50" />
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Part_Image)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SortOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>

            <td style="display: inline-flex">
                @* @Url.Action("#Editmodel", new { id = item.BrandId })*@
                <a href="#Editmodel" data-toggle="modal" class="btn btn-small btn-info btnSize " onclick="EditSpareName('@item.SpareTypeId')">Edit</a>
                <a href="#Historymodel" data-toggle="modal" class="btn btn-small btn-success btnSize ">History</a>
                <input type="button" value="Delete" class="btn btn-small btn-danger btnSize" />
            </td>
        </tr>
    }

</table>



