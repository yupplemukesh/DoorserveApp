@model TogoFogo.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<style>
    .size {
        height: 30px;
    }

    #Producttype {
        background-color: white;
        border: 1px solid #cccccc;
        color: #a4a6aa;
        font-size: 14px;
        z-index: 1040;
    }

    .boxShadow {
        box-shadow: 0px 0px 10px 2px rgba(119, 119, 119, 0.75);
        -moz-box-shadow: 0px 0px 10px 2px rgba(119, 119, 119, 0.75);
        -webkit-box-shadow: 0px 0px 10px 2px rgba(119, 119, 119, 0.75);
    }

    body {
        font-family: 'Roboto', sans-serif;
    }

    .form-group {
        padding-bottom: 20px;
    }
</style>
<br />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">

        <div class="col-md-5 col-md-offset-1 " style="padding-left:15px;padding-right:15px">
            <h4 style="text-align:center">Create New User</h4>
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, new { @class = "col-md-5" })
                <div class="col-md-7">

                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control size" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-5" })
                <div class="col-md-7">

                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control size", @type = "tel", @maxLength = "10" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">

                @Html.LabelFor(m => m.Password, new { @class = "col-md-5" })
                <div class="col-md-7">

                    @Html.PasswordFor(m => m.Password, new { @class = "form-control size" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })


                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5" })
                <div class="col-md-7">

                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control size" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })


                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Emailid, new { @class = "col-md-5" })
                <div class="col-md-7">

                    @Html.TextBoxFor(m => m.Emailid, new { @class = "form-control size" })
                    @Html.ValidationMessageFor(m => m.Emailid, "", new { @class = "text-danger" })
                </div>

            </div>


            <div class="form-group">
                @Html.Label("User Type", new { @class = "col-md-5" })
                <div class="col-md-7">

                    @Html.DropDownListFor(m => m.Name, null, "Select", htmlAttributes: new { @class = "form-control size", @id = "usertype" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Reporting To", new { @class = "col-md-5" })
                <div class="col-md-7">

                    @Html.TextBoxFor(m => m.reportingto, htmlAttributes: new { @class = "form-control size", @id = "reportingto" })

                </div>
            </div>



            <div class="form-group">
                @Html.LabelFor(model => model.STATE, htmlAttributes: new { @class = "control-label col-md-5" })
                <div class="col-md-7">
                    @Html.TextBoxFor(m => m.STATE, new { @class = "form-control size" })

                    @Html.ValidationMessageFor(model => model.STATE, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2"></div>
                <div class=" col-md-8">

                    <input type="submit" class="btn btn-primary btn-lg" value="Create"
                           style="height:37px;line-height:7px; margin-bottom:20px;margin-top:10px;width: -webkit-fill-available" />
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
        <br />
        <div class="col-md-4"></div>

    </div>
}
<br />
