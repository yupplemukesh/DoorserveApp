@{
    Layout = null;
}

<br />
<div class="panel panel-primary">
    <div class="panel-body">
        <div class="col-md-2 col-md-offset-2">
            <label>Search By</label>
        </div>
        <div class="col-md-2">

            <select class="form-control">
                <option value="">Select</option>
                <option value="1">Name</option>
                <option value="2">Mobile</option>
                <option value="3">Emp code</option>
            </select>
        </div>
        <div class="col-md-3">
            <input class="form-control" placeholder="Enter Search Criterian" />
        </div>
        <div class="col-md-3">
            <input type="button" class="btn btn-primary" value="Search" />
        </div>
    </div>
</div>
<div class="panel panel-primary">
    <div class="panel-body">
        <table class="table table-bordered table-striped table-hover " id="myTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>User Name</th>
                    <th>Employee Code</th>
                    <th>Gender</th>
                    <th>Mobile</th>
                    <th>Email ID</th>
                    <th>Region</th>
                    <th>Sub Region</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                <td>Name</td>
                    <td>User Name</td>
                    <td>Employee Code</td>
                    <td>Gender</td>
                    <td>Mobile</td>
                    <td>Email ID</td>
                    <td>Region</td>
                    <td>Sub Region</td>
                    <td><div class="col-md-2 " >
    <a href="#RegisterMoal" data-toggle="modal"><span class="glyphicon glyphicon-pencil text-danger">Edit</span></a>
     
</div>
                   </td></tr>
                </tbody>
</table>
        <div class="modal fade" id="RegisterMoal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">User Details</h4>
                    </div>
                    <div class="modal-body">@Html.Action("Edit")</div>

                </div>

            </div>
        </div>
    </div>
</div>
