
@model TogoFogo.Models.RegistrationModel
@{
    Layout = null;
}
<div class="panel-body p-t-0">
    <h4 class="p-b-10 m-t-30"> Registration: </h4>
    <div class="form-group row">
        <label class="col-sm-3 control-label" for="form-control-1">Is Active ?</label>
        <div class="col-sm-9">
            @Html.CheckBoxFor(model => model.IsActive, new { @checked = "checked" })
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 control-label" for="form-control-1"> Comments</label>
        <div class="col-sm-9">
            @Html.TextAreaFor(model => model.Remarks, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
        </div>
    </div> 

</div>