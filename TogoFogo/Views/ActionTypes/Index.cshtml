
@model TogoFogo.Models.ActionTypes.ActionTypeList
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    var count = 1;
}
<div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <h3 class="m-y-0">Action Types</h3>
            </div>
            <div class="col-md-6 ">
                <div class="pull-right">
                    @if (Model.Rights.ExcelExport)
                    {
                        <button class="btn btn-secondary">
                            Export Excel
                        </button>
                    }
                        @if (Model.Rights.Create)
                        {

                            <a class="btn btn-primary" href="@Url.Action("Create", "ActionTypes")">
                                <span>
                                    Add ActionTypes

                                </span>

                            </a>
                        }

                    </div>
            </div>
        </div>
    </div>
</div>


<div class="panel-body">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-condensed" id="myTable">

                <thead>
                    <tr>

                        <th>
                            @Html.DisplayName("#SN")
                        </th>
                        <th>
                            @Html.DisplayName("Name")
                        </th>

                        <th>
                            @Html.DisplayName("Is Active")
                        </th>
                        <th>
                            @Html.DisplayName("Last Updated Date Time")
                        </th>
                        <th>
                            @Html.DisplayName("Last Updated Details")
                        </th>

                        <th>
                            @Html.DisplayName("Comments")
                        </th>
                        <th>
                            @Html.DisplayName("Action")
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model.ActionTypes)
                {
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastUpdatedDateTime)

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastUpdateBy)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Comments)
                        </td>
                        <td style="display: inline-flex">
                            @if (Model.Rights.Edit)
                            {
                                <a class="btn btn-small btn-info btnSize " href='@Url.Action("EDIT", "ActionTypes", new { id = item.ActionTypeId })'>Edit</a>
                            }
                            </td>
                    </tr>
                    count++;
                }
            </table>
        </div>
    </div>
</div>


