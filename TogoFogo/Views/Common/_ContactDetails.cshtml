@model IEnumerable<TogoFogo.Models.ContactPersonModel>

@using TogoFogo.Models
@{
    Layout = null;
    int Count = 1;
}

<div class="row">
    <div class="col-md-12" style="overflow-x: scroll;">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UserID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ConFirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Designation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ConMobileNumber)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.ConEmailAddress)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>

                    <th>Action</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConFirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Designation)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ConMobileNumber)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ConEmailAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>

                    <td style="display: inline-flex">

                        <a href='@Url.Action("Edit", "ManageCourierApi", new { @apiId = item.UserID })' class="btn btn-small btn-info btnSize ">Edit</a>

                    </td>
                </tr>
                Count++;
            }

        </table>
    </div>
    </div>






