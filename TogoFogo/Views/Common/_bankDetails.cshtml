@model IEnumerable<TogoFogo.Models.BankDetailModel>
@using TogoFogo.Models
@{    
    var i = 1;
}
<div class="row">
    <div class="col-md-12"  style="overflow-x: scroll;">
        <table class="table table-striped table-bordered table-condensed table-responsive">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BankName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BankAccountNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyNameinBankAccount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BankIFSCCode)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.BankBranchName)
                    </th>
                    
                    <th>Action</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BankName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BankAccountNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyNameinBankAccount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BankIFSCCode)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.BankBranchName)
                    </td>                    
                    <td style="display: inline-flex">
                        
                            <a href='@Url.Action("Edit", "ManageCourierApi", new { @apiId = item.bankId })' class="btn btn-small btn-info btnSize ">Edit</a>
                       
                    </td>
                </tr>
                i++;
            }

        </table>
    </div>
</div>