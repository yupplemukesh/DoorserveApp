@model TogoFogo.Models.ReportedProblemModel

    <div class="panel panel-default panel-table" id="problemsDes">
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="panel-default m-b-10">
                    <div class="panel-heading p-l-0 p-t-0 ">
                        <div class="row">
                            <div class="col-md-12">
                                <h4 class="m-t-0 m-b-5">Device Problem Details</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">

                    <div class="form-material">
                        <div class="col-sm-2"> <h5 class="m-t-0">Problem Desciption</h5></div>
                        <div class="col-sm-4">
                            @Html.TextAreaFor(x => x.ProblemDescription, new { @class = "form-control" })
                        </div>

                        <div class="col-sm-2"> <h5 class="m-t-0">Issue Occurring Since Date</h5></div>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(x => x.IssueOcurringSinceDate, new { @class = "form-control", id = "datepicker1" })
                        </div>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-2 col-md-2 ">
                        <label  class="custom-control custom-control-primary custom-checkbox">
                            @Html.CheckBoxFor(x => x.IsRepeat, new { @class = "custom-control-input" })
                            <span class="custom-control-indicator"></span>
                            <span>Is Repeat?</span>
                        </label>
                    </div>
                </div>
              

            </div>
            </div>
    </div>