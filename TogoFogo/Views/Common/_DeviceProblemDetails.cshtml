@model TogoFogo.Models.ReportedProblemModel
@Html.HiddenFor(x=>x.IsRepeat)
<div class="panel panel-default panel-table b-r-0 b-l-0" id="problemsDes">
    <div class="panel-body"  id="problemsDes">
        <div class="form-horizontal">
            <div class="panel-default m-b-10">
                <div class="p-l-0 p-t-0 ">
                    <div class="row">
                        <div class="col-md-12">
                            <h4 class="m-t-0 m-b-5">Device Problem Details</h4>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="form-material">
                    <div class="col-sm-4 col-md-4"> <h5 class="m-t-0">Problem Desciption</h5></div>
                    <div class="col-sm-2 col-md-2">
                        @Html.TextAreaFor(x => x.ProblemDescription, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-4 col-md-4"> <h5 class="m-t-0">Issue Occurring Since Date</h5></div>
                    <div class="col-sm-2 col-md-2">
                        @Html.TextBoxFor(x => x.IssueOcurringSinceDate, "{0:dd/MM/yyyy}", new { @class = "form-control datepicker" })
                    </div>
                </div>
            </div>
            <div class="form-group row">

                <div class="col-sm-2 col-md-2 ">
                    <label>
                        Is Repeat Call?

                    </label>

                </div>
                <div class="col-sm-2 col-md-2 ">
                    @if (Convert.ToBoolean(Model.IsRepeat))
                    {<label id="IsRepeat">
                            Yes
                        </label> }
                    else
                    {
                        <label id="IsRepeat">
                            No
                        </label>
                    }

                </div>
            </div>          
            <div class="form-group row" id="DivprbObserved">
                <div class="form-material">                    
                    <div class="col-sm-2"> <h5 class="m-t-0">Problem Observed</h5></div>
                    <div class="col-sm-4">
                        @Html.TextAreaFor(x => x.ProblemObserved, new { @class = "form-control",@rows="1" })
                    </div>
                    </div>
                </div>
        </div>

</div>
</div>