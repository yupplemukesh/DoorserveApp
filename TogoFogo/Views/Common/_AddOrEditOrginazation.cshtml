@model TogoFogo.Models.OrganizationModel



<div class="col-12 col-sm-12 col-md-12 col-lg-12 ">



    <!-- Text input-->
    <div class=" row form-group">
        <label class="col-md-3 " for="textinput">Organization Name of Client</label>
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.OrgName, new { @class = "form-control input-md", @placeholder = "Organization Name of Client" })
            @Html.ValidationMessageFor(model => model.OrgName, "", new { @class = "text-danger" })
        </div>
    </div>


    <!-- Text input-->
    <div class=" row form-group">
        <label class="col-md-3 " for="textinput">Organization Code (CIN)</label>
        <div class="col-md-9">
            @Html.TextBoxFor(x => x.OrgCode, new { @class = "form-control input-md", @placeholder = "Organization Code (CIN)" })
            @Html.ValidationMessageFor(model => model.OrgCode, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Text input-->
    <div class=" row form-group">
        <label class="col-md-3 " for="textinput">Organization IEC Number</label>
        <div class="col-md-9">

            @Html.TextBoxFor(x => x.OrgIECNumber, new { @class = "form-control input-md", @placeholder = "Organization IEC Number" })
            @Html.ValidationMessageFor(model => model.OrgIECNumber, "", new { @class = "text-danger" })
        </div>
    </div>



    <!-- Select Basic -->
    <div class=" row form-group">
        <label class="col-md-3 control-label" for="selectbasic">Statutory Type	</label>
        <div class="col-md-9">

            @Html.DropDownListFor(model => model.OrgStatutoryType, new List<SelectListItem>
{
new SelectListItem {Text = "Partnership", Value = "Partnership"},
new SelectListItem {Text = "Private Limited", Value = "Private Limited"},
new SelectListItem {Text = "Proprietary", Value = "Proprietary"},
new SelectListItem {Text = "Limited", Value = "Limited"}
}, "Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.OrgStatutoryType, "", new { @class = "text-danger" })
        </div>
    </div>


    <!-- Select Basic -->
    <div class=" row form-group">
        <label class="col-md-3 control-label" for="selectbasic">Applicable Tax Type	</label>
        <div class="col-md-9">


            @Html.DropDownListFor(model => model.OrgApplicationTaxType, new List<SelectListItem>
        {
            new SelectListItem {Text = "Indian Gst", Value = "Indian Gst"},
            new SelectListItem {Text = "Gst", Value = "Gst"}

        }, "Select", new { @class = "form-control" })

        </div>
    </div>


    <div class=" row form-group">
        <label class="col-md-3 control-label" for="selectbasic">GST Category	</label>
        <div class="col-md-9">

            @Html.DropDownListFor(model => model.OrgGSTCategory, Model.GstCategoryList, new { @class = "form-control" })

        </div>
    </div>
    <!-- Text input-->
    <div class=" row form-group">
        <label class="col-md-3 " for="textinput">GST Number</label>
        <div class="col-md-9">

            @Html.TextBoxFor(x => x.OrgGSTNumber, new { @class = "form-control input-md", @placeholder = "GST Number" })
            @Html.ValidationMessageFor(model => model.OrgGSTNumber, "", new { @class = "text-danger" })
        </div>
    </div>


    <!-- file input-->
    <div class=" row form-group">
        <label class="col-md-3 " for="textinput">Upload GST Number</label>
        <div class="col-md-9">
            @Html.TextBoxFor(model => model.OrgGSTNumberFilePath, htmlAttributes: new { @type = "file", @class = "form-control", placeholder = "" })
            @Html.ValidationMessageFor(model => model.OrgGSTNumberFilePath, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Text input-->
    <div class=" row form-group">
        <label class="col-md-3 " for="textinput">PAN Card Number</label>
        <div class="col-md-9">

            @Html.TextBoxFor(x => x.OrgPanNumber, new { @class = "form-control input-md", @placeholder = "PAN Number" })
            @Html.ValidationMessageFor(model => model.OrgPanNumber, "", new { @class = "text-danger" })

        </div>
    </div>



    <!-- Text input-->
    <div class=" row form-group">
        <label class="col-md-3 " for="textinput">PAN Card Number</label>
        <div class="col-md-9">
            @Html.TextBoxFor(model => model.OrgPanNumberFilePath, htmlAttributes: new { @type = "file", @class = "form-control", placeholder = "" })
            @Html.ValidationMessageFor(model => model.OrgPanNumberFilePath, "", new { @class = "text-danger" })
        </div>
    </div>
</div>