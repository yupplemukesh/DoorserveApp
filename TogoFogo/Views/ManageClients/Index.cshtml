@model IEnumerable<TogoFogo.Models.ClientModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    var Count = 1;
}


<div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <h3 class="m-y-0">Manage Clients</h3>
            </div>
            <div class="col-md-6 ">
                <div class="pull-right">
                    <button class="btn btn-secondary">
                        Export Excel
                    </button>

                    <a class="btn btn-primary" href="@Url.Action("Create","ManageClients")">

                        <span>
                            Add Clients

                        </span>
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>


<!--/.row-->


<div class="panel-body">
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered table-condensed" id="myTable">

                <thead>
                    <tr>

                        <th>
                            @Html.DisplayName("#SN")
                        </th>
                        <th>
                            @Html.DisplayName("Process Name")
                        </th>
                        <th>
                            @Html.DisplayName("Client Code")
                        </th>
                        <th>
                            @Html.DisplayName("Client Name")
                        </th>
                        <th>
                            @Html.DisplayName("Organization Name")
                        </th>
                        <th>
                            @Html.DisplayName("City/Location")
                        </th>

                        <th>
                            @Html.DisplayName("First Name")
                        </th>
                        <th>
                            @Html.DisplayName("Last Name")
                        </th>
                        <th>
                            @Html.DisplayName("Mobile Number")
                        </th>
                        <th>
                            @Html.DisplayName("Email")
                        </th>
                        <th>
                            @Html.DisplayName("Is Active")
                        </th>
                        <th>
                            @Html.DisplayName("Comments")
                        </th>
                        <th>
                            @Html.DisplayName("Last Updated Date Time")
                        </th>
                        <th>
                            @Html.DisplayName("Last Updated Details")
                        </th>

                        <th>Actions</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Count)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProcessName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClientCode)

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClientName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrgName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ConCityName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ConFirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ConLastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ConMobileNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ConEmailAddress)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Remarks)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifyBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifyDate)
                        </td>
                        <td style="display: inline-flex">
                            <a class="btn btn-small btn-info btnSize " href='@Url.Action("EDIT","ManageClients",new {id = item.ClientId})'>Edit</a>
                        </td>
                    </tr>
                    Count++;
                }
            </table>
        </div>
        <!--/.panel
        </div><!--/.col-->
    </div>
</div>