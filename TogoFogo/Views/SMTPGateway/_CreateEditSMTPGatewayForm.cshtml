        <label class=" control-label" for="form-control-9">IsProcessByAwsSes</label>
        <div class="form-group">
            <label class="custom-control custom-control-primary custom-checkbox active">
                @Html.CheckBoxFor(x => x.IsProcessByAWS, new { @class = "custom-control-input" })

                <span class="custom-control-indicator"></span>
            </label>
        </div>
    </div>



</div>