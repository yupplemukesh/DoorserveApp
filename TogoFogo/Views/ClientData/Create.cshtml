@model TogoFogo.Models.ClientDataModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <h3 class="m-y-0">Upload Client Data</h3>
            </div>
            <div class="col-md-6 ">
                <div class="pull-right">
                    <button class="btn btn-secondary">
                        Export Excel
                    </button>
                    <a class="btn btn-primary" href="@Url.Action("Create","ActionTypes")">
                        <span>
                            Template
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel-body">
    @using (Html.BeginForm("Upload", "ClientData", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="row" style="padding-bottom: 5px">
            @Html.LabelFor(model => model.ClientId, htmlAttributes: new { @class = "col-md-4  col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">

                @Html.DropDownListFor(model => model.ClientId, Model.ClientList, new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.ClientList, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row" style="padding-bottom: 5px">
            @Html.LabelFor(model => model.ServiceTypeId, htmlAttributes: new { @class = "col-md-4  col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">

                @Html.DropDownListFor(model => model.ServiceTypeId, Model.ServiceTypeList, new { @class = "form-control", @readonly = "readonly" })
                @Html.ValidationMessageFor(model => model.ServiceTypeList, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row" style="padding-bottom: 5px;">
            @Html.Label("Browse File", htmlAttributes: new { @class = "col-md-4  col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.TextBoxFor(model => model.DataFile, htmlAttributes: new { @type = "file", @class = "form-control" })
            </div>
        </div>
        <div class="row col-md-offset-9" style="padding-bottom: 5px;">
            <button type="submit" class="btn btn-success">Upload</button>
        </div>
        <span>@ViewBag.Error</span>
    }
</div>