@model IEnumerable<TogoFogo.Models.Company.ServiceModel>

@using TogoFogo.Models
@{
    var i = 1;
}
<div class="row">
    <div class="col-md-12" style="overflow-x: scroll;">
        <table class="table table-striped table-bordered table-condensed table-responsive">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ServiceName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Note)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RatePerUser)
                    </th>

                    

                    <th>Action</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Note)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RatePerUser)
                    </td>
                    
                    <td style="display: inline-flex">

                        <a href='@Url.Action("Edit", "ManageCourierApi", new { @apiId = item.CompanyTypeId })' class="btn btn-small btn-info btnSize ">Edit</a>

                    </td>
                </tr>
                i++;
            }

        </table>
    </div>
</div>