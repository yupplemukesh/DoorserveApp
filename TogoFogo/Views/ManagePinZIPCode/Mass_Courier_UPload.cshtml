
@model TogoFogo.Models.Mass_Upload_Model
@{
    Layout = null;
}
@using (Html.BeginForm("Mass_Courier_UPload", "ManagePinZIPCode", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="col-md-6">
    <p style="font-size: 17px;"><u>Select Courier:</u></p>
    <div class="row" style="padding-bottom: 5px;">
        @Html.LabelFor(model => model.CountryBulk, htmlAttributes: new { @class = "col-md-3 col-md-offset-1 col-xs-12" })
        <div class="col-md-4 col-sm-4 col-xs-12">
            @Html.DropDownListFor(model => model.CountryBulk, null, htmlAttributes: new { @class = "form-control", placeholder = "" })
            @Html.ValidationMessageFor(model => model.CountryBulk, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row" style="padding-bottom: 5px;">
        @Html.LabelFor(model => model.CourierBulk, htmlAttributes: new { @class = "col-md-3 col-md-offset-1 col-xs-12" })
        <div class="col-md-4 col-sm-4 col-xs-12">
            @Html.DropDownListFor(model => model.CourierBulk, null, htmlAttributes: new { @class = "form-control", placeholder = "" })
            @Html.ValidationMessageFor(model => model.CourierBulk, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
<div class="col-md-6">
    <p style="font-size: 17px;"><u>PIN/ZIP Code Details:</u></p>

    <div class="row" style="padding-bottom: 5px;">
        @Html.LabelFor(model => model.PIN_CountryBulk, htmlAttributes: new { @class = "col-md-3 col-md-offset-1 col-xs-12" })
        <div class="col-md-4 col-sm-4 col-xs-12">
            @Html.DropDownListFor(model => model.PIN_CountryBulk, null, htmlAttributes: new { @class = "form-control", onchange = "AjaxWithValue('BindStateJson', 'PIN_StateBulk', this)" })
            @Html.ValidationMessageFor(model => model.PIN_CountryBulk, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row" style="padding-bottom: 5px;">
        @Html.LabelFor(model => model.PIN_StateBulk, htmlAttributes: new { @class = "col-md-3 col-md-offset-1 col-xs-12" })
        <div class="col-md-4 col-sm-4 col-xs-12">
            @Html.DropDownListFor(model => model.PIN_StateBulk, null, htmlAttributes: new { @class = "form-control", onchange = "AjaxWithValue('BindLocationJson', 'PIN_CityBulk', this)" })
            @Html.ValidationMessageFor(model => model.PIN_StateBulk, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row" style="padding-bottom: 5px;">
        @Html.LabelFor(model => model.PIN_CityBulk, htmlAttributes: new { @class = "col-md-3 col-md-offset-1 col-xs-12" })
        <div class="col-md-4 col-sm-4 col-xs-12">
            @Html.DropDownListFor(model => model.PIN_CityBulk, null, htmlAttributes: new { @class = "form-control", placeholder = "" })
            @Html.ValidationMessageFor(model => model.PIN_CityBulk, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

    <div class="col-md-12" style="padding-bottom: 5px;padding-top:10px;">
        <div class="col-md-2 col-md-offset-1">
            @Html.Label("Upload Pincode Bulk")
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12">
            @Html.TextBoxFor(model => model.postedFile, htmlAttributes: new {@type="File", @class = "form-control", @accept = ".csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" })
            @Html.ValidationMessageFor(model => model.postedFile, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Upload Excel</button>
            <input type="button" class="btn btn-success" value="Download" onClick="window.location.href='/UploadExcel/pinexcel.xlsx'">
        </div>
    </div>
   
}
