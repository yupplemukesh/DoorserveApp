@model IEnumerable<TogoFogo.Models.ColorModel>
@{ 
    Layout = null;
    int Count = 0;
}

<table class="table table-striped table-bordered table-condensed" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Serial No")
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.ColorId)
        </th>*@
            <th>
                @Html.DisplayNameFor(model => model.ColorName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayName("Created By")
            </th>
            <th>
                @Html.DisplayName("Modify By")
            </th>
            <th>
                @Html.DisplayName("Created Date")
            </th>
            <th>
                @Html.DisplayName("Modify Date")
            </th>
            <th>Action</th>
        </tr>
    </thead>
    

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @(Count=Count+1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ColorName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Comments)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.IsActive)*@
            @(item.IsActive == true ? "Active" : "InActive")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifyBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifyDate)
        </td>
        <td style="display: inline-flex">

            <a href="#Editmodel" data-toggle="modal" class="btn btn-small btn-info btnSize " onclick="EditColor(@item.ColorId)">Edit</a>
            @*<a href="#Historymodel" data-toggle="modal" class="btn btn-small btn-success btnSize ">History</a>*@
            <input type="button" value="Delete" class="btn btn-small btn-danger btnSize" />
        </td>
    </tr>
    }

</table>
