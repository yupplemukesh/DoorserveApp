@model IEnumerable<TogoFogo.Models.BrandModel>
@{
    Layout = null;                                         
}


<table class="table table-striped table-bordered table-condensed" id="myTable">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrandImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrandDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Is_repair)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Is_Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetaKeyword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetaDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetaTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UrlName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Header)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Footer)
            </th>

            <th>Actions</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.BrandName)
            </td>
            <td>
                @if (item.BrandImage != null)
                {
                    <img src="~/Uploaded Images/@item.BrandImage" width="50" height="50" />
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.BrandImage)
                }
               
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrandDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Is_repair)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Is_Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetaKeyword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetaDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetaTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Header)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Footer)
            </td>

            <td style="display: inline-flex">
                @* @Url.Action("#Editmodel", new { id = item.BrandId })*@
                <a href="#Editmodel" data-toggle="modal" class="btn btn-small btn-info btnSize " onclick="EditBrand(@item.BrandId)">Edit</a>
                <a href="#Historymodel" data-toggle="modal" class="btn btn-small btn-success btnSize ">History</a>
                <input type="button" value="Delete" class="btn btn-small btn-danger btnSize" />
            </td>
        </tr>
    }

</table>


