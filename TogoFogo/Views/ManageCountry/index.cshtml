@model IEnumerable<TogoFogo.Models.ManageCountryModel>
@using TogoFogo.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    var count = 1;
}

<div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <h3 class="m-y-0">Manage Country</h3>
            </div>
            <div class="col-md-6 ">
                <div class="pull-right">
                    @if (Permissions.Rights.ExcelExport)
                    {
                        <button class="btn btn-secondary excel">
                            Export Excel
                        </button>
                    }
                    @if (Permissions.Rights.Create)
                    {
                        <a class="btn btn-primary" href="@Url.Action("Create", "ManageCountry")">
                            <span>
                                Add Country
                            </span>
                        </a>
                    }
                    </div>
            </div>
        </div>
    </div>
</div>



<div class="panel-body">
    <div class="row">
        <div class="col-md-12">
            <div class="x_content" style="overflow-x: scroll;">
                @if (Permissions.Rights.View)
                {
                    <table class="table table-striped table-bordered table-condensed" id="myTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("#SLN")
                                </th>
                                <th>
                                    @Html.DisplayName("Country Name")
                                </th>
                                <th>
                                    @Html.DisplayName("Remark")
                                </th>
                                <th>
                                    @Html.DisplayName("IsActive")
                                </th>
                                <th>
                                    @Html.DisplayName("Created By")
                                </th>
                                <th>
                                    @Html.DisplayName("Modify By")
                                </th>
                                <th>
                                    @Html.DisplayName("Created Date")
                                </th>
                                <th>
                                    @Html.DisplayName("Modify Date")
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @count

                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Cnty_Name)

                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Remarks)


                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CBy)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.MBy)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AddedOn)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ModifiedOn)
                                </td>



                                <td style="display: inline-flex">
                                    <a href="@Url.Action("Edit", "ManageCountry", new { Cnty_Id = item.Cnty_Id })" class="btn btn-small btn-info btnSize">Edit</a>
                                </td>
                            </tr>
                            count++;
                        }

                    </table>
                }
                </div>
        </div>
    </div>
</div>
