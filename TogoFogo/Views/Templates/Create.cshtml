@model TogoFogo.Models.Template.TemplateModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="panel-heading">
    <div class="row">
        <div class="col-md-6"><h3 class="m-y-0">Template Create / Update</h3></div>

        <div class="col-md-6  add-tem-btn-mar-top">
            <div class="panel-tools">
                @*<a href="sms-template.html" class="tools-icon">
                        <button type="submit" class="btn btn-primary btn-sm">Back to Template List</button>
                    </a>*@
                @Html.ActionLink("Back to Template List", "Index")

                <a href="#" class="tools-icon">
                    <i class="zmdi zmdi-refresh"></i>
                </a>
                <a href="#" class="tools-icon">
                    <i class="zmdi zmdi-close"></i>
                </a>
            </div>
        </div>
    </div>

</div>


<div class="panel-body">
    @using (Html.BeginForm("Create", "Templates", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.TemplateId)
        <!--/.row-->
        @Html.Partial("_CreateEditEmailSmsNotificationForm", Model)
        <div class="row">
            <div class="col-md-12 ">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="submit" class="btn btn-primary">Cancel</button>
            </div>
        </div>
    }
</div>




