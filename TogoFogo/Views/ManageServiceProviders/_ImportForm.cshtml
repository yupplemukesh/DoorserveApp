@model TogoFogo.Models.ProviderFileModel

@using (Html.BeginForm("ImportProviders", "ManageServiceProviders", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="row form-group">

        <label class="col-md-3">

            Select File(.xls):
        </label>


        <div class="col-md-9">
            @Html.TextBoxFor(model => model.DataFile, htmlAttributes: new { @type = "file", @class = "form-control", placeholder = "" })
            @Html.ValidationMessageFor(model => model.DataFile, "", new { @class = "text-danger" })
        </div>

    </div>

    <div class="row form-group">
        <div class="col-md-offset-3">
            <button type="submit" class="btn btn-primary"> Upload </button>

        </div>

    </div>
}