
@{
    ViewBag.Title = "ManageSparePartsPriceandStock";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h3 class="m-y-0">Add Spare Parts Price and Stock</h3>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>

                    </ul>
                    <div class="clearfix"></div>
</div>
            <div class="x_content">
                <br />
                @Html.Action("AddSparePartsPriceandStock", "PurchaseProcurement")
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h3 class="m-y-0">List Of Spare Price Price</h3>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
</div>
            <div class="x_content" style="overflow-x: scroll;">
                @Html.Action("PriceAndStockTable", "PurchaseProcurement")
            </div>
        </div>
    </div>

</div>
<div class="modal fade" id="Editmodel" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Spare Part Price & Stock </h4>
            </div>

            <div class="modal-body" id="Info">@Html.Partial("EditSparePartsPriceandStock")</div>
        </div>

    </div>
</div>
@if (ViewBag.AddPriceandStock != null)
{
    <div id="snackbar">@ViewBag.AddPriceandStock</div>
}
@if (ViewBag.AddPriceandStock != null)
{
    <script>

        var x = document.getElementById("snackbar");
        x.className = "show";
        setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);

    </script>
}
@section scripts{
    <script>
        function EditPriceStock(sparePriceStockId) {
            $.ajax({
                type: 'GET',
                url: "/PurchaseProcurement/EditSparePartsPriceandStock?sparePriceStockId=" + sparePriceStockId,
                contentType: 'application/json; charset=utf-8',
                cache: false,
                success: function(response) {
                    $("#Info").html(response);
                },
                error: function(e) {
                    console.log(e);
                    $(".submitbutton").attr("disabled", false);
                    alert("Something went wrong...");

                },
                complete: function() {

                    $(".submitbutton").attr("disabled", false);
                }
            });
        }

        function AjaxWithValue(method, ddl, e) {
            var val = e.value;
            $.ajax({
                type: "GET",
                url: "/DropdownBind/" + method + "?value=" + val,
                data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function(data) {
                    $("#" + ddl).empty();

                    //var sel = new Option('-Select-', '');
                    //$('#' + ddl).append(sel);
                    for (var i = 0; i < data.length; i++) {
                        var opt = new Option(data[i].Text, data[i].Value);
                        $('#' + ddl).append(opt);
                    }
                }
            });
        }

        function partNameCodeGenerate(e) {
            var value = e.value;
            $.ajax({
                type: "GET",
                url: "/PurchaseProcurement/GetSpareCode?partId=" + value,
                data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    console.log(data.Part_Image);
                    document.getElementById('SpareCode').value = data.SpareCode;
                    var url = "http://crm.togofogo.com/Uploaded Images/" + data.Part_Image;
                    console.log(url);
                    $("#Part_Image").attr("src", url);
                }
            });
        }
    </script>
}

