@model IEnumerable<TogoFogo.Models.UserPermission>
@{
    ViewBag.Title = "User Permission List";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <h3 class="m-y-0">List Of Role</h3>
            </div>
        </div>
    </div>
</div>
<div class="panel-body">
    <div class="x_content" style="overflow-x: scroll;">
        <table class="table table-striped table-bordered table-condensed" id="myTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Serial No")
                    </th>
                    <th>
                        @Html.DisplayName("User Name")
                    </th>
                    <th>
                        @Html.DisplayName("Role Name")
                    </th>
                    <th>
                        @Html.DisplayName("Is Active")
                    </th>
                    <th>
                        @Html.DisplayName("Created Date")
                    </th>
                    <th>
                        @Html.DisplayName("Modify Date")
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SerialNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleName)
                    </td>
                    <td>
                        @(item.IsActive == true ? "Active" : "InActive")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifyDate)
                    </td>
                    <td style="display: inline-flex">
                        <a href="@Url.Action("AddUserPermission","UserPermission",new { RoleId=item.RoleId,PermissionId=item.PermissionId,UserId=item.UserId})" class="btn btn-small btn-info btnSize">Edit</a>
                    </td>
                </tr>
            }

        </table>
</div>
</div>