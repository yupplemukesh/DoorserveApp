
@model TogoFogo.Models.ManageCourierApiModel
@{
    Layout = null;
}

    <div class="form-group">
              @Html.HiddenFor(x=>x.API_ID)
            <div class="row">
                <div class="col-md-9 col-sm-9 col-lg-9">
                    <span style="font-size: 17px;">Select Courier</span>
                    <div class="row" style="padding-bottom: 5px;">
                        @Html.LabelFor(model => model.Country, htmlAttributes: new { @class = "col-md-3 col-md-offset-1 col-xs-12" })
