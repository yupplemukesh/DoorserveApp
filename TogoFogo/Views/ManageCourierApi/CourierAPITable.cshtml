@model IEnumerable<TogoFogo.Models.ManageCourierApiModel>
@using TogoFogo.Models
@{
    Layout = null;
    int Count = 1;
}


<table class="table table-striped table-bordered table-condensed" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passwrd)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.AppVersion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountPIN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountEntity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountCountryCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsLargePacket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifyDate)
            </th>

            <th>Action</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Courier)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Passwrd)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.AppVersion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountPIN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountEntity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountCountryCode)
        </td>
        <td>

            @(item.IsLargePacket == true ? "Yes" : "No")
        </td>
        <td>

            @(item.IsActive == true ? "Yes" : "No")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comments)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifyDate)
        </td>
        <td style="display: inline-flex">
            @if (Permissions.Rights.Edit)
            {
                <a href='@Url.Action("Edit", "ManageCourierApi", new { @apiId = item.API_ID })' class="btn btn-small btn-info btnSize ">Edit</a>
            }
        </td>
    </tr>
        Count++;
    }

</table>
