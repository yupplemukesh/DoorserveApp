@model IEnumerable<TogoFogo.Models.ManageCourierApiModel>
@{
    Layout = null;
}


<table class="table table-striped table-bordered table-condensed" id="myTable">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Courier)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Passwrd)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.AppVersion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountPIN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountEntity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountCountryCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsLargePacket)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comments)
        </th>

        <th>Actions</th>
    </tr>
    </thead>
    

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Courier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passwrd)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.AppVersion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountPIN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountEntity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountCountryCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLargePacket)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td style="display: inline-flex">
                @* @Url.Action("#Editmodel", new { id = item.BrandId })*@
                <a href="#Editmodel" data-toggle="modal" class="btn btn-small btn-info btnSize " onclick="editCourierApi(@item.API_ID)">Edit</a>
                <a href="#Historymodel" data-toggle="modal" class="btn btn-small btn-success btnSize ">History</a>
                <input type="button" value="Delete" class="btn btn-small btn-danger btnSize" />
            </td>
        </tr>
    }

</table>
