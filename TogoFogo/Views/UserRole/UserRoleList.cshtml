@model List<TogoFogo.Models.UserRole>
@{
    ViewBag.Title = "UserRoleList";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <h3 class="m-y-0">List Of Role</h3>
            </div>
        </div>
    </div>
</div>
<div class="panel-body">
    <div class="x_content" style="overflow-x: scroll;">
        <table class="table table-striped table-bordered table-condensed" id="myTable">
            <thead>

                <tr>
                    <th>
                        @Html.DisplayName("Serial No")
                    </th>

                    <th>
                        @Html.DisplayName("Role Name")
                    </th>
                    <th>
                        @Html.DisplayName("Comments")
                    </th>
                    <th>
                        @Html.DisplayName("Created Date")
                    </th>
                    <th>
                        @Html.DisplayName("Modify Dated")
                    </th>

                    <th>Actions</th>
                </tr>

            </thead>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>
             
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.ModifyDate)
                </td>
                <td style="display: inline-flex">

                    <a href="@Url.Action("AddUserRole","UserRole",new { id=item.RoleId})" class="btn btn-small btn-info btnSize">Edit</a>
                </td>
            </tr>
            }

        </table>
    </div>
</div>
