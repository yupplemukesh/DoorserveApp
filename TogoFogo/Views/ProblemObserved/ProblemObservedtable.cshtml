
@model IEnumerable<TogoFogo.Models.ManageProblemObserved>
@{
    Layout = null;
}


<table class="table table-striped table-bordered table-condensed" id="myTable">
    <thead>
        <tr>

            <th>
                @Html.DisplayName("Category")
            </th>
            <th>
                @Html.DisplayName("Sub Category")
            </th>
            <th>
                @Html.DisplayName("Problem Code")
            </th>
            <th>
                @Html.DisplayName("Problem Observed")
            </th>
            <th>
                @Html.DisplayName("Sort Order")
            </th>
            <th>
                @Html.DisplayName("Is Active")
            </th>
          
            <th>Actions</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.CatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCatName)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProblemCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProblemObserved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SortOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>

            <td style="display: inline-flex">
                @* @Url.Action("#Editmodel", new { id = item.BrandId })*@
                <a href="#Editmodel" data-toggle="modal" class="btn btn-small btn-info btnSize " onclick="EditProblemObserved(@item.ProblemId)">Edit</a>
                <a href="#Historymodel" data-toggle="modal" class="btn btn-small btn-success btnSize ">History</a>
                <input type="button" value="Delete" class="btn btn-small btn-danger btnSize" />
            </td>
        </tr>
    }

</table>




