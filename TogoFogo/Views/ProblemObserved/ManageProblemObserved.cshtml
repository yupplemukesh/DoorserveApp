@{
    ViewBag.Title = "ManageProblemObserved";

}

<div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <h3 class="m-y-0">Manage Problem Observed</h3>
            </div>
            <div class="col-md-6 ">
                <div class="pull-right">
                    @*<button class="btn btn-primary excel">Export to Excel</button>*@
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel-body">
    @Html.Action("AddProblemObserved", "ProblemObserved")
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    @*<h2>List Of Problem Observed<small></small></h2>*@
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>

                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content" style="overflow-x: scroll;">
                    @Html.Action("ProblemObservedtable", "ProblemObserved")
                </div>
            </div>
        </div>

    </div>
</div>
<div class="modal fade" id="Editmodel" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Problem Observed </h4>
            </div>

            <div class="modal-body" id="Info">@Html.Partial("EditProblemObserved")</div>
        </div>
    </div>
</div>
@if (ViewBag.ProblemObserved != null)
{
    <div id="snackbar">@ViewBag.ProblemObserved</div>
}
@*@if (ViewBag.EditProblemObserved != null)
    {
        <div id="snackbar">@ViewBag.EditProblemObserved</div>
    }*@
@section Scripts{

    @if (ViewBag.ProblemObserved != null)
    {
        <script>

            var x = document.getElementById("snackbar");
            x.className = "show";
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);

        </script>
    }
    <script>

        function AjaxWithValue(method, ddl, e) {
            var val = e.value;
            debugger;
            $.ajax({
                type: "GET",
                url: "/DropdownBind/" + method + "?value=" + val,
                data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $("#" + ddl).empty();

                    //var sel = new Option('-Select-', '');
                    //$('#' + ddl).append(sel);
                    for (var i = 0; i < data.length; i++) {
                        var opt = new Option(data[i].Text, data[i].Value);
                        $('#' + ddl).append(opt);
                    }
                }
            });
        }
        function EditProblemObserved(ProblemId) {
            $.ajax({
                type: 'GET',
                url: "/ProblemObserved/EditProblemObserved?ProblemId=" + ProblemId,
                contentType: 'application/json; charset=utf-8',
                cache: false,
                success: function (response) {
                    $("#Info").html(response);
                },
                error: function (e) {
                    console.log(e);
                    $(".submitbutton").attr("disabled", false);
                    alert("Something went wrong...");

                },
                complete: function () {

                    $(".submitbutton").attr("disabled", false);
                }
            });
        }

    </script>
}

<script src="~/Content/Scripts/jquery-1.10.2.js"></script>
<script src="~/Content/Scripts/jquery.validate.js"></script>
<script src="~/Content/Scripts/jquery.validate.unobtrusive.js"></script>