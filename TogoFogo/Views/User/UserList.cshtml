@model IEnumerable<TogoFogo.Models.User>
@{
    ViewBag.Title = "User List";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<table class="table table-striped table-bordered table-condensed" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Serial No")
            </th>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("User Name")
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th>
                @Html.DisplayName("Mobile No")
            </th>
            <th>
                @Html.DisplayName("State")
            </th>
            <th>
                @Html.DisplayName("City")
            </th>
            <th>
                @Html.DisplayName("Pin Code")
            </th>
            <th>
                @Html.DisplayName("Address")
            </th>
            <th>
                @Html.DisplayName("Is Active")
            </th>
            <th>
                @Html.DisplayName("Modify By")
            </th>
           
            <th>
                @Html.DisplayName("Modify Date")
            </th>
            <th>Action</th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SerialNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._ContactPerson.ConFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._ContactPerson.ConEmailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._ContactPerson.ConMobileNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._AddressDetail.State)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._AddressDetail.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._AddressDetail.PinNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item._AddressDetail.Address)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.IsActive)*@
            @(item.IsActive == true ? "Active" : "InActive ")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifyBy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifyDate)
        </td>
        <td style="display: inline-flex">
            <a href="@Url.Action("AddUser","User",new { id=item.UserId})" class="btn btn-small btn-info btnSize">Edit</a>
            @*<input type="button" class="btn btn-small btn-warning btnSize" value="Add Rights" onclick="@("window.location.href='" + @Url.Action("AddRights", "Master",new {ID=item.ID }) + "'");" />*@
            @*<a href="#Editmodel" data-toggle="modal" class="btn btn-small btn-info btnSize " onclick="EditUser(@item.ID)">Edit</a>*@
            @*<a href="#Historymodel" data-toggle="modal" class="btn btn-small btn-success btnSize" onclick="EditPassword( @item.ID , '@item.Password')">Update UserPassword</a>*@
            @*<input type="button" class="btn btn-small btn-success btnSize" value="Update Password" onclick="@("window.location.href='" + @Url.Action("EditPassword", "Master",new {Id=item.ID,Email=item.Email_Address,username=item.UserName}) + "'");" />*@
        </td>
    </tr>
    }

</table>