@model TogoFogo.Models.ServiceCenterList
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    var Count = 1;
}


<div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <h3 class="m-y-0">Manage Service Centers</h3>
            </div>
            <div class="col-md-6 ">
                <div class="pull-right">
                    @if (Model.rights.ExcelExport)
                    {
                        <button class="btn btn-secondary excel">
                            Export Excel
                        </button>
                    }
                    @if (Model.rights.Create)
                    {
                        <a class="btn btn-primary" href="@Url.Action("Create", "ManageServiceCenters")">

                            <span>
                                Add ASC

                            </span>
                        </a>
                    }
                    </div>
            </div>
        </div>
    </div>
</div>


<!--/.row-->


<div class="panel-body">
    <div class="row">
        <div class="col-md-12">
            @if (Model.rights.View)
            {
            <table class="table table-striped table-bordered table-condensed" id="myTable">

                <thead>
                    <tr>

                        <th>
                            @Html.DisplayName("#SN")
                        </th>
                        <th>
                            @Html.DisplayName("Process Name")
                        </th>
                        <th>
                            @Html.DisplayName("ASC Code")
                        </th>
                        <th>
                            @Html.DisplayName("ASC Name")
                        </th>
                        <th>
                            @Html.DisplayName("Organization Name")
                        </th>
                       
                        <th>
                            @Html.DisplayName("Is Active")
                        </th>
                        <th>
                            @Html.DisplayName("Comments")
                        </th>
                        <th>
                            @Html.DisplayName("Last Updated Date Time")
                        </th>
                        <th>
                            @Html.DisplayName("Last Updated Details")
                        </th>

                        <th>Action</th>
                    </tr>
                </thead>
                @foreach (var item in Model.serviceCenters)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Count)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProcessName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CenterCode)

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CenterName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ORGNAME)
                        </td>                        

                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Remarks)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifyBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifyDate)
                        </td>
                        @if (Model.rights.Edit)
                        {
                        <td style="display: inline-flex">
                            <a class="btn btn-small btn-info btnSize " href='@Url.Action("EDIT", "ManageServiceCenters", new { id = item.CenterId })'>Edit</a>
                        </td>
                        }
                    </tr>
                    Count++;
                }
            </table>
            }
        </div>
        <!--/.panel
        </div><!--/.col-->
    </div>
</div>