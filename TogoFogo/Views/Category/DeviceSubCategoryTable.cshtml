@model IEnumerable<TogoFogo.Models.SubcategoryModel>
@{
    Layout = null;
}


<table class="table table-striped table-bordered table-condensed" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Serial No")
            </th>
            <th>
                @Html.DisplayName("Device Category")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SortOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRequiredIMEI1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRequiredIMEI2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IMEILength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRequiredSerialNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SRNOLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRepair)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifyDate)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SerialNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CatName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubCatName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SortOrder)

        </td>
        <td>
            @(item.IsRequiredIMEI1 == true ? "Yes" : "No")
            @*@Html.DisplayFor(modelItem => item.IsRequiredIMEI1)*@
        </td>
        <td>
            @(item.IsRequiredIMEI2 == true ? "Yes" : "No")
            @*@Html.DisplayFor(modelItem => item.IsRequiredIMEI2)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IMEILength)
        </td>
        <td>
            @(item.IsRequiredSerialNo == true ? "Yes" : "No")
            @*@Html.DisplayFor(modelItem => item.IsRequiredSerialNo)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SRNOLength)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comments)
        </td>
        <td>
            @(item.IsRepair == true ? "Yes" : "No")
            @*@Html.DisplayFor(modelItem => item.IsRepair)*@
        </td>
        <td>
            @(item.IsActive == true ? "Active" : "InActive")
            @*@Html.DisplayFor(modelItem => item.IsActive)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifyDate)
        </td>

        <td style="display: inline-flex">
            @* @Url.Action("#Editmodel", new { id = item.BrandId })*@
            @*<a href="#Historymodel" data-toggle="modal" class="btn btn-small btn-success btnSize ">History</a>*@
            @if (ViewBag.Create == 3)
            {<a href="#Editmodel" data-toggle="modal" class="btn btn-small btn-info btnSize " onclick="EditSubCategory(@item.SubCatId)">Edit</a>}
           
            @if (ViewBag.Create == 4)
            {
                <input type="button" value="Delete" class="btn btn-small btn-danger btnSize" />
            }
        </td>
    </tr>
    }

</table>

