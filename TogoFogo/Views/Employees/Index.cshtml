@model IEnumerable<TogoFogo.Models.EmployeeModel>
@using TogoFogo.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    var Count = 1;
    var SessionModel = Session["User"] as SessionModel;
}

<div class="panel-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-6">
                <h3 class="m-y-0">Manage Engineer</h3>
            </div>
            <div class="col-md-6 ">
                <div class="pull-right">
                    @if (Permissions.Rights.ExcelExport)
                    {
                        <button class="btn btn-secondary excel">
                            Export Excel
                        </button>
                    }

                    @if (Permissions.Rights.Create)
                    {
                        <a class="btn btn-primary" href="@Url.Action("Create", "Employees")">
                            <span>
                                Add Engineer
                            </span>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="panel-body">
    <div class="row">
        <div class="col-md-12">
            <div class="x_content" style="overflow-x: scroll;">
                @if (Permissions.Rights.View)
                {
                    <table class="table table-striped table-bordered table-condensed" id="myTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayName("#SLN")
                                </th>
                                 @if (SessionModel.UserTypeName.ToLower().Contains("provider"))
                                
                                {
                                <th>
                                    @Html.DisplayName("#Center Name")
                                </th>
                                }

                                @if (SessionModel.UserTypeName.ToLower().Contains("company"))
                                {
                                    <th>
                                        @Html.DisplayName("Provider Name")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Center Name")
                                    </th>
                                }
                                <th>
                                    @Html.DisplayNameFor(model => model.EmpCode)
                                </th>
                                <th>
                                    @Html.DisplayName("Technician Name")
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Department)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Designation)
                                </th>
                                <th>
                                    @Html.DisplayName("Mobile Number")
                                </th>

                                <th>
                                    Joining Date
                                </th>
                                <th>
                                    Emp Pic UP
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.IsActive)
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Count

                            </td>
                            @if (SessionModel != null)
                            {
                                if (SessionModel.UserTypeName.ToLower().Contains("provider"))
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CenterName)

                                    </td>
                                }
                            }
                            @if (SessionModel != null)
                            {
                                if (SessionModel.UserTypeName.ToLower().Contains("company"))
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProviderName)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CenterName)

                                    </td>
                                }
                            }
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmpCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TechnicianName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Department)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Designation)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ContactNumber)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.EMPDOJ)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsPickUp)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>

                                <td style="display: inline-flex">
                                    <a href="@Url.Action("Edit","Employees", new {empId=item.EmpId})" class="btn btn-small btn-info btnSize">Edit</a>
                                </td>
                            </tr>
                            Count++;
                        }

                    </table>
                }
            </div>
            </div>
        </div>
</div>