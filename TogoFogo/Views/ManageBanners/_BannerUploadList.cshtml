@model  IEnumerable<TogoFogo.Models.ManageBannerUploadModel>
@using TogoFogo.Models
@{


    Layout = null;
    var count = 1;

}
<table class="table table-striped table-bordered table-condensed" id="tblImgList">
    <thead>
        <tr>
            <th>Serial No</th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeaderTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SortOrder)
            </th>
            <th>
                Uploaded File
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BannerLinkURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AltText)
            </th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @count
            </td>
            <td>
                @Html.Raw(item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeaderTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SortOrder)
            </td>
            <td>
                <img src="/tempFiles/Banners/@item.BannerName/@item.BannerFileName" height="30" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BannerLinkURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AltText)
            </td>
            <td style="display: inline-flex">
                <a href='#' onclick='EditItem("@item.ItemCode")' class="btn btn-small btn-info btnSize">Edit</a>
            </td>
            <td style="display: inline-flex">
                <a href='#' onclick='DeleteItem("@item.ItemCode")' class="btn btn-small btn-info btnSize">Delete</a>
            </td>
        </tr>
            count = count + 1;
        }
    </tbody>
</table>
